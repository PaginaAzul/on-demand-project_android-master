<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddNewBank">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/actionBarBackgroundColor">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:src="@drawable/back" />

            <com.pagin.azul.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/add_new_bank"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_large"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/ll_corner_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/toolbar"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/bg_offerdetail_corner"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginTop="@dimen/dp_3"
                android:layout_marginEnd="@dimen/dp_5"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_60"
                    android:background="@color/colorLightGreen">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/dp_10"
                        android:src="@drawable/bank" />

                    <com.pagin.azul.view.RobotoRegularTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/my_bank_details"
                        android:textColor="@color/blacklight"
                        android:textSize="@dimen/text_size_large" />
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/ll_Linear"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/toolbar"
                    android:layout_marginStart="@dimen/dp_30"
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginEnd="@dimen/dp_30"
                    android:layout_marginBottom="@dimen/dp_20"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:background="@drawable/bg_edit_text">

                        <com.pagin.azul.view.RobotoRegularEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edit_text"
                            android:layout_marginStart="@dimen/dp_25"
                            android:text="@string/enter_bank_name"
                            android:textColorHint="@color/blacklight"
                            android:textColor="@color/blacklight"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_edit_text">

                        <com.pagin.azul.view.RobotoRegularEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:background="@drawable/bg_edit_text"
                            android:layout_marginStart="@dimen/dp_25"
                            android:text="@string/account_holder_name"
                            android:textColor="@color/blacklight"
                            android:textColorHint="@color/blacklight"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_edit_text">

                        <com.pagin.azul.view.RobotoRegularEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_25"
                            android:background="@drawable/bg_edit_text"
                            android:text="@string/bank_account_number"
                            android:textColorHint="@color/blacklight"
                            android:textColor="@color/blacklight"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_edit_text">

                        <com.pagin.azul.view.RobotoRegularEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_25"
                            android:text="@string/holder_account_number"
                            android:textColor="@color/blacklight"
                            android:background="@drawable/bg_edit_text"
                            android:textColorHint="@color/blacklight"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_60"
                        android:layout_marginTop="@dimen/dp_15"
                        android:background="@drawable/bg_edit_text">

                        <com.pagin.azul.view.RobotoRegularEditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/dp_25"
                            android:text="@string/iban_number"
                            android:textColor="@color/blacklight"
                            android:textColorHint="@color/blacklight"
                            android:background="@drawable/bg_edit_text"
                            android:textSize="@dimen/text_size_medium" />
                    </RelativeLayout>
                </LinearLayout>


            </LinearLayout>



        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="@dimen/dp_30"
            android:layout_marginEnd="@dimen/dp_30"
            android:layout_marginBottom="@dimen/dp_30">

            <com.pagin.azul.view.RobotoRegularButton
                android:id="@+id/saveAddNewBankBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_65"
                android:background="@drawable/bg_sign_in"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>