<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="vertical">


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_share_img"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="Share Image" />


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_share_loc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="Share Location" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_Withdraw"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="Withdraw Offer" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_issue_bill"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_16"
            android:text="Issue Bill" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tvServiceCompleted"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/service_completed" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tvFileComplaint"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/file_a_complaint" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_cancel"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_sign_in"
            android:gravity="center"
            android:text="@string/cancel"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/white" />


    </LinearLayout>


</RelativeLayout>