<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:orientation="vertical">


        <com.pagin.azul.view.RobotoSemiBoldTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_5"
            android:text="Home"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/addresss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_toLeftOf="@+id/right_click"
            android:padding="@dimen/dp_5"
            android:text="Sector 62 Noida Uttar Pradesh" />


        <ImageView
            android:id="@+id/right_click"
            android:visibility="gone"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_30"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_35"
            android:layout_marginTop="@dimen/dp_15"
            android:src="@drawable/ic_check_blue" />


    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/ll_main"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_20"
        android:background="@color/dividerColor" />
</RelativeLayout>