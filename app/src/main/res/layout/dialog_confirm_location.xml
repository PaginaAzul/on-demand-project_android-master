<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rlSaveAddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">


    <LinearLayout
        android:id="@+id/ll_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_marginRight="@dimen/dp_5"
        android:background="@drawable/bg_outline_terms_condition"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_15">


        <com.pagin.azul.view.RobotoSemiBoldTextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:padding="@dimen/dp_12"
            android:text="@string/sace_loc_as"
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_showloc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:gravity="center"
                android:text="Sector 62 Noida Uttar Pradesh"
                android:textColor="@color/colortext"
                android:textSize="@dimen/text_size_regular"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <com.pagin.azul.view.RobotoRegularEditText
                android:id="@+id/edt_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_desc"
                android:layout_marginTop="32dp"
                android:background="@null"
                android:gravity="center"
                android:hint="@string/save_location_manually"
                android:imeOptions="actionDone"
                android:textColor="@color/black"
                android:textCursorDrawable="@null"
                android:textSize="@dimen/sp_14"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_showloc" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="@dimen/dp_1"
                android:layout_below="@+id/edt_option"
                android:layout_marginStart="24dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="5dp"
                android:background="@color/dividerColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edt_option"
                app:layout_constraintVertical_bias="0.0" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_70"
            android:orientation="horizontal"
            android:visibility="visible">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_home"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/grey_white_btn_back"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/home"
                android:textAllCaps="false"
                android:textColor="@color/black" />

            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_office"
                android:layout_width="@dimen/dp_0"
                android:layout_height="@dimen/dp_40"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/grey_white_btn_back"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/office"
                android:textAllCaps="false"
                android:textColor="@color/black" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_marginEnd="@dimen/dp_50"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_save"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/bg_sign_in"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/save"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_cancel"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_45"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/grey_btn_back"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="@string/cancel"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />


        </LinearLayout>

    </LinearLayout>


</RelativeLayout>