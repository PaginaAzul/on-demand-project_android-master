<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_dialog1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_50"
        android:background="@drawable/bg_outline_terms_condition"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_5">


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_terms_condition"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="Alert"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_medium" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_25"
            android:gravity="center"
            android:orientation="horizontal">



                <com.pagin.azul.view.RobotoBoldTextView
                    android:id="@+id/tv_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_15"
                    android:layout_marginEnd="@dimen/dp_15"
                    android:layout_marginStart="@dimen/dp_15"
                    android:textColor="@color/blacklight"
                    android:text="@string/lorem_ipsum_is_simply"
                    android:textSize="@dimen/text_size_regular" />



        </RelativeLayout>



        <LinearLayout
            android:weightSum="2"
            android:layout_marginEnd="@dimen/dp_25"
            android:layout_marginStart="@dimen/dp_25"
            android:layout_marginBottom="@dimen/dp_25"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_no"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_65"
                android:layout_marginEnd="@dimen/dp_5"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_weight="1"
                android:background="@drawable/grey_btn_back"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="No"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_yes"
                android:layout_width="@dimen/dp_10"
                android:layout_height="@dimen/dp_65"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dp_5"
                android:background="@drawable/bg_sign_in"
                android:gravity="center"
                android:padding="@dimen/dp_5"
                android:text="Yes"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />







        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_cancel"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_24"
        android:visibility="gone"
        android:layout_alignRight="@+id/ll_dialog1"
        android:layout_alignTop="@+id/ll_dialog1"
        android:padding="@dimen/dp_4"
        android:src="@drawable/close_zz" />

</RelativeLayout>