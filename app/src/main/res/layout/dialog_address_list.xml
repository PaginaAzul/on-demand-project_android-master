<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransparentAddress">


    <ImageView
        android:id="@+id/right"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_35"
        android:layout_marginStart="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@drawable/ic_check_black_24dp" />

    <com.pagin.azul.view.RobotoRegularTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_80"
        android:text="@string/select_address"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_large"/>

    <ImageView
        android:id="@+id/ivclose"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_80"
        android:src="@drawable/close_white" />


    <LinearLayout
        android:id="@+id/ll_dialog1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_350"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/dp_60"
        android:layout_marginEnd="@dimen/sp_5"
        android:layout_marginStart="@dimen/sp_5"
        android:layout_marginTop="@dimen/dp_60"
        android:background="@color/white"
        android:paddingBottom="@dimen/dp_5">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_add_list"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_350">

        </androidx.recyclerview.widget.RecyclerView>


    </LinearLayout>

</RelativeLayout>