<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="vertical">

        <com.pagin.azul.view.RobotoSemiBoldTextView
            android:textColor="@color/black"
            android:textSize="@dimen/sp_16"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/withraw_draw"/>



        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_store_loc"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/sp_16"
            android:text="@string/store_location_is_far" />


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_want_del"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginTop="@dimen/dp_15"
            android:background="@drawable/bg_light_grey_white_layout"
            android:gravity="center"
            android:textSize="@dimen/sp_16"
            android:text="@string/i_don_t_want_to_deliver_it" />

        <RelativeLayout
           android:layout_marginTop="@dimen/dp_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.pagin.azul.view.RobotoRegularButton
                android:id="@+id/btn_cancel"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_sign_in"
               android:layout_alignParentStart="true"
                android:text="Cancel"
                android:textAllCaps="false"
                android:textColor="@color/white" />


            <com.pagin.azul.view.RobotoRegularButton
                android:id="@+id/btn_ok"
                android:layout_alignParentEnd="true"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:background="@drawable/grey_back"
                android:text="Ok"
                android:textAllCaps="false"
                android:textColor="@color/white" />


        </RelativeLayout>

    </LinearLayout>




</RelativeLayout>