<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_200"
    android:layout_margin="@dimen/dp_5"
    android:background="@drawable/bg_outline_terms_condition"
    android:baselineAligned="false"
    android:orientation="vertical">

    <com.pagin.azul.view.RobotoBoldTextView
        android:id="@+id/tv_filter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_10"
        android:text="Range Filter"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/dp_5"
        android:src="@drawable/close" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tv_filter"
        android:layout_marginTop="@dimen/dp_5"
        android:background="@color/dividerColor" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginStart="@dimen/dp_10"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/radioButton1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/radiodraw"
            android:text="     0-15 km Range"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radioButton2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:button="@drawable/radiodraw"
            android:text="     15-30 km Range"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />

        <RadioButton
            android:id="@+id/radioButton3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_10"
            android:button="@drawable/radiodraw"
            android:text="     30+ km Range"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="normal" />
    </RadioGroup>


</RelativeLayout>