<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".onphasesecond.activity.MenuFilterActivity">

    <include
        android:id="@+id/include7"
        layout="@layout/layout_main_toolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include7">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/tasteCL"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <CheckBox
                android:id="@+id/tasteCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:button="@drawable/selector_squre_checkbox"
                android:paddingLeft="10dp"
                android:text="@string/taste"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioGroup
                android:id="@+id/tasteRG"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tasteCB"
                app:layout_constraintTop_toBottomOf="@+id/tasteCB">

                <RadioButton
                    android:id="@+id/sweetRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:paddingLeft="10dp"
                    android:text="@string/sweet" />

                <RadioButton
                    android:id="@+id/saltyRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:paddingLeft="10dp"
                    android:text="@string/salty" />

                <RadioButton
                    android:id="@+id/mixedRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:checked="true"
                    android:paddingLeft="10dp"
                    android:text="@string/mixed" />


                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:checked="true"
                    android:paddingLeft="10dp"
                    android:text="Others"
                    android:visibility="gone" />

            </RadioGroup>


            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorGrey"
                app:layout_constraintEnd_toEndOf="@+id/tasteRG"
                app:layout_constraintStart_toStartOf="@+id/tasteRG"
                app:layout_constraintTop_toBottomOf="@+id/tasteRG" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tasteCL">

            <CheckBox
                android:id="@+id/ratingCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:button="@drawable/selector_squre_checkbox"
                android:paddingLeft="10dp"
                android:text="Rating:"
                android:textSize="16dp"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/colorGrey"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/ratingCB"
                app:layout_constraintTop_toBottomOf="@+id/ratingCB" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout3">

            <CheckBox
                android:id="@+id/TypeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:button="@drawable/selector_squre_checkbox"
                android:paddingLeft="10dp"
                android:text="@string/type"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioGroup
                android:id="@+id/TypeGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/TypeCB"
                app:layout_constraintTop_toBottomOf="@+id/TypeCB">

                <RadioButton
                    android:id="@+id/vegRB"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:drawableRight="@drawable/veg"
                    android:drawablePadding="16dp"
                    android:paddingLeft="10dp"
                    android:text="@string/veg" />

                <RadioButton
                    android:id="@+id/noVegRB"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:drawableRight="@drawable/nonveg"
                    android:drawablePadding="16dp"
                    android:paddingLeft="10dp"
                    android:text="@string/non_veg" />


            </RadioGroup>


            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/TypeGroup"
                app:layout_constraintStart_toStartOf="@+id/TypeGroup"
                app:layout_constraintTop_toBottomOf="@+id/TypeGroup" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4">

            <CheckBox
                android:id="@+id/EatTypeCB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="24dp"
                android:button="@drawable/selector_squre_checkbox"
                android:paddingLeft="10dp"
                android:text="Eat Type:"
                android:textSize="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <RadioGroup
                android:id="@+id/EatTypeGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/EatTypeCB"
                app:layout_constraintTop_toBottomOf="@+id/EatTypeCB">

                <RadioButton
                    android:id="@+id/LunchRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:paddingLeft="10dp"
                    android:text="@string/lunch" />

                <RadioButton
                    android:id="@+id/breakFastRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:paddingLeft="10dp"
                    android:text="@string/breakfast" />

                <RadioButton
                    android:id="@+id/dinnerRB"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:button="@drawable/bg_radio_on_phase_btn"
                    android:paddingLeft="10dp"
                    android:text="@string/dinner" />


            </RadioGroup>


            <View
                android:layout_width="0dp"
                android:layout_height="0.1dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorGrey"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/EatTypeGroup"
                app:layout_constraintStart_toStartOf="@+id/EatTypeGroup"
                app:layout_constraintTop_toBottomOf="@+id/EatTypeGroup" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/applyFilterBtn"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:background="@drawable/bg_sign_in"
        android:text="@string/apply_filter"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

</androidx.constraintlayout.widget.ConstraintLayout>