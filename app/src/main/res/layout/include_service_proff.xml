<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvPicktxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableLeft="@drawable/yellow_s_pin"
        android:drawablePadding="@dimen/sp_16"
        android:text="@string/service"
        android:textColor="@color/yellow"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvserviceLoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:text=" Mobulous Technologies reviews. A free inside look at company"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16"
        app:layout_constraintEnd_toEndOf="@+id/tvPicktxt"
        app:layout_constraintStart_toStartOf="@+id/tvPicktxt"
        app:layout_constraintTop_toBottomOf="@+id/tvPicktxt" />

    <TextView
        android:id="@+id/tv_serdis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:drawableEnd="@drawable/point_2"
        android:text="1 k.m"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/colorPink"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tvserviceLoc"
        app:layout_constraintStart_toStartOf="@+id/tvserviceLoc"
        app:layout_constraintTop_toBottomOf="@+id/tvserviceLoc" />
</androidx.constraintlayout.widget.ConstraintLayout>