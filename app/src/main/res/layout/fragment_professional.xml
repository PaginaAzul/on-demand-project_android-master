<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.DeliveryManFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_15"
        android:orientation="vertical">

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/upload_ID_txt"
            android:textSize="@dimen/text_size_medium" />


        <LinearLayout
            android:id="@+id/ll_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_id1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="ID-1"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:id="@+id/rl_id_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_id1"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image" />


            </RelativeLayout>


        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_id2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="ID-2"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:id="@+id/rl_id_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_id2"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image" />


            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <ImageView
                android:id="@+id/iv_prf"
                android:layout_width="@dimen/dp_120"
                android:layout_height="@dimen/dp_100"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/default_p" />

            <ImageView
                android:id="@+id/iv_varify"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/iv_prf"
                android:layout_alignBottom="@+id/iv_prf"
                android:layout_marginBottom="@dimen/dp_10"
                android:src="@drawable/verify" />


        </RelativeLayout>


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/imageclick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_prf"
            android:layout_marginTop="@dimen/dp_5"
            android:gravity="center"
            android:text="@string/upload_verified_icon"
            android:textColor="@color/blacklight"
            android:textSize="@dimen/text_size_regular" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_myid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Professional Captain ID"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_regular" />

            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_toRightOf="@+id/tv_myid"
                android:text="#2589631"
                android:textColor="@color/purpalMedium"
                android:textSize="@dimen/text_size_regular" />


        </RelativeLayout>


        <com.pagin.azul.view.RobotoRegularEditText
            android:id="@+id/about_txt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_80"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/bg_edit_txt_desc"
            android:hint="Write something about"
            android:paddingStart="@dimen/dp_20"
            android:paddingTop="@dimen/dp_10"
            android:paddingEnd="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_50"
            android:textColor="@color/blacklight"
            android:textColorHint="@color/blacklight"
            android:textSize="@dimen/text_size_regular" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Industry"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rl_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerindustry"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_edit_text"
                android:drawableRight="@drawable/down_s"
                android:hint="Dummy Industry"
                android:padding="@dimen/dp_15"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/blacklight"
                android:textColorHint="@color/blacklight"
                android:textSize="@dimen/text_size_regular" />

        </RelativeLayout>

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Section"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rl_section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnersection"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_edit_text"
                android:drawableRight="@drawable/down_s"
                android:hint="Dummy Section"
                android:padding="@dimen/dp_15"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/blacklight"
                android:textColorHint="@color/blacklight"
                android:textSize="@dimen/text_size_regular" />

        </RelativeLayout>

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Professional"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rl_professional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerprofessional"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />

            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_professional"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_edit_text"
                android:drawableRight="@drawable/down_s"
                android:hint="Dummy Professional"
                android:padding="@dimen/dp_15"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/blacklight"
                android:textColorHint="@color/blacklight"
                android:textSize="@dimen/text_size_regular" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">

            <com.pagin.azul.view.RobotoRegularEditText
                android:id="@+id/tap_plumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:padding="@dimen/dp_10"
                android:text="Professional Tap Plumber"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/default_image" />


            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_upload_certificate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.pagin.azul.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="Upload Certificate"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:id="@+id/rl_upload_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_upload_certificate"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image" />


            </RelativeLayout>

        </LinearLayout>


        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Vehicle License"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rl_GovermentID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Spinner
                android:id="@+id/spinnerGovermentID"
                android:layout_width="400dp"
                android:layout_height="0dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center" />


            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_GovermentID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:background="@drawable/bg_edit_text"
                android:drawableRight="@drawable/down_s"
                android:hint="Vehicle License"
                android:padding="@dimen/dp_15"
                android:paddingStart="@dimen/dp_20"
                android:textColor="@color/blacklight"
                android:textColorHint="@color/blacklight"
                android:textSize="@dimen/text_size_regular" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_vehicle_license"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:background="@drawable/canvas_filter_bg"
            android:orientation="vertical">


            <com.pagin.azul.view.RobotoRegularTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_3"
                android:background="@color/grey"
                android:drawableEnd="@drawable/upload"
                android:drawablePadding="@dimen/dp_10"
                android:padding="@dimen/dp_10"
                android:text="Upload Vehicle License"
                android:textColor="@color/blacklight"
                android:textSize="@dimen/text_size_medium" />

            <RelativeLayout
                android:id="@+id/rl_vehicle_license"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:gravity="center"
                android:visibility="gone">


                <ImageView
                    android:id="@+id/iv_vehicle_license"
                    android:layout_width="180dp"
                    android:layout_height="120dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_image" />


            </RelativeLayout>

        </LinearLayout>

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:text="Bank A/C IBAN (optional)"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.pagin.azul.view.RobotoRegularEditText
            android:id="@+id/edt_bank_ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/bg_edit_text"
            android:hint="Enter bank a/c"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/blacklight"
            android:textColorHint="@color/blacklight"
            android:textSize="@dimen/text_size_regular" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_20"
            android:text="Emergency Phone"
            android:textColor="@color/purpalMedium"
            android:textSize="@dimen/text_size_regular" />


        <com.pagin.azul.view.RobotoRegularEditText
            android:id="@+id/edt_emergancy_contct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:layout_marginBottom="@dimen/dp_25"
            android:background="@drawable/bg_edit_text"
            android:hint="Enter contact number"
            android:padding="@dimen/dp_15"
            android:paddingStart="@dimen/dp_20"
            android:textColor="@color/blacklight"
            android:textColorHint="@color/blacklight"
            android:textSize="@dimen/text_size_regular" />

        <RelativeLayout
            android:id="@+id/rl_update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_sign_in"
            android:gravity="center">

            <com.pagin.azul.view.RobotoRegularTextView
                android:id="@+id/tv_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Update"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_add_money"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_60"
            android:layout_marginBottom="@dimen/dp_20"
            android:background="@drawable/bg_sign_in"
            android:gravity="center"
            android:visibility="gone">

            <com.pagin.azul.view.RobotoRegularTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Contact us to add a category"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_medium" />
        </RelativeLayout>


    </LinearLayout>


</ScrollView>