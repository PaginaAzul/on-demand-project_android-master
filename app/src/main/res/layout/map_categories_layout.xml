<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="@dimen/dp_8"
    android:id="@+id/rlMain"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/cate_img"
        android:layout_width="@dimen/dp_65"
        android:layout_height="@dimen/dp_60"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/d_1"
        app:layout_constraintBottom_toTopOf="@+id/cate_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.pagin.azul.view.RobotoRegularTextView
        android:id="@+id/cate_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:text="Restaurants"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/cate_img"
        app:layout_constraintStart_toStartOf="@+id/cate_img"
        app:layout_constraintTop_toBottomOf="@+id/cate_img" />


</androidx.constraintlayout.widget.ConstraintLayout>