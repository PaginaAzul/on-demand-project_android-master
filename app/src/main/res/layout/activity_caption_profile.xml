    <RelativeLayout
        android:id="@+id/rey_layout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_gravity="center"
        android:background="@color/actionBarBackgroundColor"
        android:gravity="start"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:paddingStart="@dimen/dp_15"
            android:src="@drawable/back" />


        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/caption_profile"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/text_size_large" />


        <com.pagin.azul.view.RobotoSemiBoldTextView
            android:id="@+id/save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="end"
            android:padding="@dimen/dp_10"
            android:text="@string/save"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/sp_18"
            android:visibility="gone" />


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/l_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rey_layout"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_deliverman"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/canvas_offer_btn_background"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="I'M Deliveryman"
            android:textSize="@dimen/text_size_medium" />

        <com.pagin.azul.view.RobotoRegularTextView
            android:id="@+id/tv_professional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/canvas_offer_btn_background"
            android:gravity="center"
            android:padding="@dimen/dp_15"
            android:text="I'M Professional"
            android:textSize="@dimen/text_size_medium" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/l_layout" />


</RelativeLayout>